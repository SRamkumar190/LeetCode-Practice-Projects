class Solution {
    public int[] plusOne(int[] digits) {
        int n = digits.length;

        // Iterate from the rightmost digit to the leftmost
        for (int i = n - 1; i >= 0; i--) {
            // If the current digit is less than 9, simply increment it and return the array
            if (digits[i] < 9) {
                digits[i]++;
                return digits;
            } else {
                // If the current digit is 9, set it to 0 and continue to the next digit (carrying over)
                digits[i] = 0;
            }
        }

        // If the loop completes, it means all digits were 9s (e.g., [9,9,9])
        // In this case, a new array is needed with an extra digit at the beginning
        int[] newDigits = new int[n + 1];
        newDigits[0] = 1; // Set the first digit to 1 (representing the carry-over)

        return newDigits;
    }
}
